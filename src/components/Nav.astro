---
import data from "../data/site.json";
import DarkModeToggle from "./DarkModeToggle.astro";
---

<nav
  transition:persist
  class="bg-stone-100 border-gray-200 dark:bg-slate-800"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="#3">
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
        >{data.owner}</span
      >
    </a>
   
    <button
      id="triggerEl"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-700 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-expanded="false"
    >
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="targetEl">
      <ul
        class="font-medium items-center flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-stone-100 dark:bg-slate-800 md:dark:bg-slate-800 dark:border-gray-700"
      >
        <li>
            <a
              href='/'
              class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0  md:p-0 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
              aria-current="page"
            >
            Home
            </a>
          </li>
          <li>
            <a
              href='#experiencia'
              class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0  md:p-0 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
              aria-current="page"
            >
            Experiencia
            </a>
          </li>
          <li>
            <a
              href='#habilidades'
              class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0  md:p-0 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
              aria-current="page"
            >
            Habilidades
            </a>
          </li>
          <li>
            <a
              href='#tecnologias'
              class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0  md:p-0 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
              aria-current="page"
            >
            Tecnologías
            </a>
          </li>
          <li>
            <a
              href='#aboutme'
              class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0  md:p-0 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
              aria-current="page"
            >
            Sobre mí
            </a>
          </li>
        <li>
          <DarkModeToggle />
        </li>
      </ul>
    </div>
  </div>
</nav>
<script>
import { Collapse } from "flowbite";

// Fetch elements with descriptive variable names
const targetElement = document.getElementById("targetEl");
const triggerElement = document.getElementById("triggerEl");

// Create a concise options object with clear structure
const collapseOptions = {
  onCollapse() {},
  onExpand() {},
  onToggle() {},
};

// Initialize the Collapse instance directly with optional chaining
const collapse = new Collapse(targetElement, triggerElement, collapseOptions);

// Use arrow functions for event listeners
document.addEventListener("astro:page-load", () => collapse.collapse());
document.addEventListener("astro:after-swap", () => collapse.expand());

// Consider removing unused methods based on project needs
// - collapse.expand();
// - collapse.collapse();
// - collapse.toggle();
</script>
